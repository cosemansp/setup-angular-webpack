{
  "name": "angular-unit-test",
  "version": "1.0.0",
  "description": "Angular UnitTest Setup",
  "scripts": {
    "cleanup": "rimraf src/**/*.ngfactory.* src/**/*.ngstyle.* src/**/*.ngsummary.* build dist",
    "serve": "npm run cleanup && webpack-dev-server --open --inline --hot",
    "serve:prod": "npm run build:prod && serve ./dist",
    "build": "npm run cleanup && cross-env NODE_ENV=development webpack",
    "build:prod": "npm run cleanup && cross-env NODE_ENV=production webpack",
    "build:prod:aot": "npm run cleanup && npm run ngc && cross-env NODE_ENV=production webpack --progress --config ./config/webpack.prod.aot.js",
    "test": "mocha-webpack --opts test/mocha-webpack.opts --watch",
    "test:serve": "webpack-dev-server --config config/webpack.test.browser.js --inline --progress --port 8888 --open",
    "ngc": "ngc"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^2.4.7",
    "@angular/compiler": "^2.4.7",
    "@angular/core": "^2.4.7",
    "@angular/http": "^2.4.7",
    "@angular/platform-browser": "^2.4.7",
    "@angular/platform-browser-dynamic": "^2.4.7",
    "core-js": "^2.4.1",
    "rxjs": "^5.0.3",
    "zone.js": "^0.7.6"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^2.4.7",
    "@angular/platform-server": "^2.4.7",
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.39",
    "@types/node": "^7.0.5",
    "@types/sinon": "^1.16.35",
    "angular-router-loader": "^0.5.0",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.0.3",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-string": "^1.3.0",
    "chai-subset": "^1.4.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^2.0.0-rc",
    "file-loader": "^0.10.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.28.0",
    "jsdom": "^9.11.0",
    "mocha": "^3.2.0",
    "mocha-loader": "^1.1.0",
    "mocha-webpack": "^1.0.0-beta",
    "node-sass": "^4.3.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.0",
    "serve": "^3.3.0",
    "sinon": "^2.0.0-pre.4",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "tslint": "^4.4.2",
    "tslint-config-standard": "^4.0.0",
    "tslint-eslint-rules": "^3.2.3",
    "typescript": "^2.1.5",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0",
    "webpack-merge": "^2.6.1",
    "webpack-node-externals": "^1.5.4"
  }
}
